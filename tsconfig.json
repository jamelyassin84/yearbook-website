{
    
    "compileOnSave": false,
    "compilerOptions": {
        "lib": ["dom", "es2020"],
        "baseUrl": "./src",
        "allowSyntheticDefaultImports": true,
        "module": "es2020",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "target": "es2020",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "sourceMap": true,
        "declaration": false,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "ES2022",
        "module": "es2020",
        "lib": ["es2020", "dom"],
        "useDefineForClassFields": false,
        "types": ["dom"]
    }
}
